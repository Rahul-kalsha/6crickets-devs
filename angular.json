{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "coding-challenge": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/coding-challenge",
      "sourceRoot": "projects/coding-challenge/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/coding-challenge",
            "index": "projects/coding-challenge/src/index.html",
            "browser": "projects/coding-challenge/src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/coding-challenge/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/coding-challenge/public"
              }
            ],
            "styles": [
              "projects/coding-challenge/src/styles.scss"
            ],
            "scripts": [],
            "server": "projects/coding-challenge/src/main.server.ts",
            "prerender": true,
            "ssr": {
              "entry": "projects/coding-challenge/server.ts"
            },
            "webWorkerTsConfig": "projects/coding-challenge/tsconfig.worker.json"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kB",
                  "maximumError": "4kB"
                }
              ],
              "outputHashing": "all",
              "ssr": false,
              "prerender": false 
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "ssr": false,
              "prerender": false 
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "coding-challenge:build:production"
            },
            "development": {
              "buildTarget": "coding-challenge:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/coding-challenge/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/coding-challenge/public"
              }
            ],
            "styles": [
              "projects/coding-challenge/src/styles.scss"
            ],
            "scripts": [],
            "webWorkerTsConfig": "projects/coding-challenge/tsconfig.worker.json"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/coding-challenge/**/*.ts",
              "projects/coding-challenge/**/*.html"
            ],
            "eslintConfig": "projects/coding-challenge/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": [
      "@angular-eslint/schematics"
    ]
  }
}
